{
    "compilerOptions": {
        "target": "ES2020",
        "module": "Node16",
        "moduleResolution": "node16",
        "outDir": "dist",
        "strict": false,
        "skipLibCheck": true,
        "ignoreDeprecations": "5.0",
        "allowJs": true,
        "checkJs": false,
        "declaration": true,
        "noEmit": false,
        "types": ["node"]
    },
    "include": ["src/**/*"],
    "exclude": [
        "**/node_modules/**",
        "dist/**", 
        "src/connectors/**"
    ]
}